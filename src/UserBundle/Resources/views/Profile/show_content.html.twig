{% trans_default_domain 'FOSUserBundle' %}


<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p> <li> <a href='{{path('fos_user_change_password')}}'>Modifier mon mot de passe</a></li></p>
    <p> <li> <a href='{{path('fos_user_profile_edit')}}'>Modifier mon mes informations</a></li></p>
</div>
<div class="profile_views">Votre profile a été consulté {{ user.views }} fois</div>
<h3>Vos enchères :</h3>
<div class="bid_list">

    {% for bid in user.bids %}
    <div>{{ bid.product }}</div>
    {% endfor %}
</div>
<h3>Vos produits vendus :</h3>
<div class="bid_list">

    {% for product in user.products %}
        {% if product.buyer %}
         <div>{{ product }}</div>
        {% endif %}
    {% endfor %}
</div>
<h3>Vos produits en vente :</h3>
<div class="bid_list">

    {% for product in user.products %}
        {% if product.buyer == null %}
            <div>{{ product }}</div>
            <div class="product_views">Nombre de vues du produit : {{ product.views }}</div>
        {% endif %}
    {% endfor %}
</div>