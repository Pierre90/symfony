{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}

    <div class="error">{{ error }}</div>
    {% endif %}
    <h1>Nos produits</h1>
    <div class="search">
       Rechercher :
        <div class="category_list">
            Par categorie :   <select id="category">
                <option value="null" selected>Toutes</option>
                {% for category in categories %}
                    <option value="{{ category }}">{{ category }}</option>

                {% endfor %}
            </select>

        </div>
        <div class="user_list">

            Par utilisateur :   <select id="user">
                <option value="null" selected>Tous</option>
                {% for user in users %}
                    <option value="{{ user }}">{{ user }}</option>

                {% endfor %}
            </select>
        </div>
    </div>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Image</th>
                <th>User</th>
                <th>Categories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}

            <tr class="{{ product.category|replace({' ':'_'}) }} product {{ product.user|replace({' ':'_'}) }}">
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }} â‚¬</td>
                <td>{{ product.image }}</td>
                <td><a href="{{ path('user_show', { 'id': product.user.id }) }}">{{  product.user  }}</a></td>
                <td>{{ product.category }}</td>

            </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                        </li>
                        {% if app.user == product.user or is_granted('ROLE_ADMIN')%}
                        <li>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}">edit</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
    <script>
        $(document).on('change', 'select#category', function(){

            var clas = this.value.replace(' ', '_');
            var selectUser = $('#user').val();
            var user = selectUser.replace(' ', '_');
            if(this.value === "null")
            {
                $('.product').show();

                if(user != "null")
                {
                    $(".product:not(."+user+")").hide();
                }

            }
            else{
                $(".product:not(."+clas+")").hide();
                $('.'+clas).show();

                if(user != "null")
                {
                    $(".product:not(."+user+")").hide();
                }

            }


        });

        $(document).on('change', 'select#user', function(){

            var clas = this.value.replace(' ', '_');
            var selectCat = $('#category').val();
            var cat = selectCat.replace(' ', '_');
            if(this.value === "null")
            {
                $('.product').show();

                if(cat != "null")
                {
                    $(".product:not(."+cat+")").hide();
                }
            }
            else{
                $(".product:not(."+clas+")").hide();
                $('.'+clas).show();

                if(cat != "null")
                {
                    $(".product:not(."+cat+")").hide();
                }
            }


        });</script>
{% endblock %}
